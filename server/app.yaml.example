runtime: nodejs20
env: standard
instance_class: F1
automatic_scaling:
  max_instances: 1
env_variables:
  NODE_ENV: "production"
  # CRITICAL: You must provide a CLOUD MongoDB URI (e.g., MongoDB Atlas). 
  # Localhost (127.0.0.1) will NOT work on Google Cloud.
  MONGODB_URI: "YOUR_MONGODB_URI_HERE"
  EMAIL_USER: "your_email@gmail.com"
  EMAIL_PASS: "your_app_password"
  # Set your desired admin password here
  ADMIN_PASSWORD: "admin"
